<div>
<h4>Hello, <%= @user.name %>!</h4>
</div>
<div class = 'container-fluid'>
	<div class = 'span4'>
		<%= image_tag(@user.image_url, :class => 'span8')%>
	</div>
	<div class = 'span4'>
		<table class ='table well'>
			<tr><b>Your Pending Events:</b></tr>
				<% @user.invited_events.each do |event| %>
				<tr>
					<td><%= event.title %></td>
					<td><%= event.start_at %></td>
					<td><%= event.end_at %></td>
				</tr>
				<% end %>
		</table>
	</div>
	<div class = 'span4'>
			<%= link_to "", user_find_friends_path(:user => current_user.id),
		:class => 'zocial facebook icon', :method => :post, :id => 'facebook-import', 
		:title => "Import Facebook Friends" %>
		<%= link_to "", user_find_events_path(:user => current_user.id),
		:class => 'zocial googleplus icon', :method => :post, :id => 'google-import', 
		:title => "Import Google Calendar Events"  %> <br/> <br/>
		<h4>Unhappy?</h4> 
		<p><%= button_to "Cancel my account", registration_path(@user), :confirm => 
			"Are you sure?", :method => :delete, :class=>'btn btn-danger' %></p>
	</div>
</div>


