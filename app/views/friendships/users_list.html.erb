<%= form_tag(users_list_friendships_path, :method => :get) do %>
	<h4>Search for a user:</h4>
	<%= text_field_tag :name, params[:name]%>
	<%= submit_tag "Search ", :name => nil %>
<% end %>
<% if @users != 35 %>
	<table class = 'table'>
		<tr>
			<th class = 'span12'></th>
			<th>Name</th>
			<th>Email</th>
		</tr>
		<% @users.each do |user| %>
			<% if user != current_user %>
			<tr>
				<td><%= image_tag("default_fb_pic.jpg", :class=>'span3')%></td>
				<td><%= user.name %></td>
				<td><%= user.email%></td>
				<% unless current_user.is_friends?(user) %>
					<td><%= button_to "Add Friend", 
					friendships_path(:second_id => user.id),
					:method => "post"%></td>
				<% else %>
					<td>Y'all two are buddy buddy</td>
				<% end %>
			</tr>
			<%end%>
		<% end %>
	</table>
		<div class = 'container'>
			<div class = 'span9'>
			</div>
			<div class = 'span3'>
			<p>
			<% if @previous_page %>
				<%= link_to "Previous 25", users_list_friendships_path(:page => @page_num-1, :name => @name), 
				:method => :get, :class => 'btn'%>
			<% end %>		
			
			<% if @next_page %>
				<%= link_to "Next 25", users_list_friendships_path(:page => @page_num+1, :name => @name), 
				:method => :get, :class => 'btn' %>
			<% end %>
			</div>
		</div>
<% elsif @users == 35 %>
	<h4>No users found.  Search again!</h4>
<% end %>
